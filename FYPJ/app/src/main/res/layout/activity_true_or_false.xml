<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultiChoiceActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:background="#ffffff">

            <Space
                android:layout_width="20px"
                android:layout_height="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Question 1"
                    android:id="@+id/questionNum"
                    android:background="#780040ff"
                    android:textSize="30dp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

            <Space
                android:layout_width="20px"
                android:layout_height="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#50ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Type: Multichoice"
                    android:id="@+id/questionType"
                    android:layout_gravity="center_vertical"
                    android:textSize="22dp"
                    android:textIsSelectable="false"
                    android:textColor="#727272" />
            </LinearLayout>

            <Space
                android:layout_width="20px"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="You are not a UIC student."
                android:id="@+id/questionContent"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"  />

            <Space
                android:layout_width="20px"
                android:layout_height="20dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f3f3f3">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:background="#dddcdc">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answerA"
                            android:checked="false"
                            android:layout_gravity="center_vertical"
                            android:onClick="HandleSelectA"
                            android:nestedScrollingEnabled="false" />

                        <Space
                            android:layout_width="15dp"
                            android:layout_height="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="True"
                            android:id="@+id/choiceA"
                            android:textSize="25dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <Space
                        android:layout_width="20px"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="left"
                        android:background="#dddcdc">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answerB"
                            android:checked="false"
                            android:layout_gravity="center_vertical"
                            android:onClick="HandleSelectB" />

                        <Space
                            android:layout_width="15dp"
                            android:layout_height="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="False"
                            android:id="@+id/choiceB"
                            android:textSize="25dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                </LinearLayout>
            </RadioGroup>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#ececec"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="false">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="prev"
            android:id="@+id/prev"
            android:layout_weight="0.3"
            android:background="#39b0a6"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1/5"
            android:id="@+id/questionIndex" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="next"
            android:id="@+id/next"
            android:layout_weight="0.3"
            android:background="#ae4848"
            android:textColor="#ffffff" />
    </LinearLayout>


</RelativeLayout>